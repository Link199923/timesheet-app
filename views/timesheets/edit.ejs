<h2>Edit Timesheet</h2>

<form action="/timesheets/<%= timesheet.id %>?_method=PUT" method="POST">

    <label>Start Date</label>
    <input 
        type="date" 
        name="start_date" 
        value="<%= timesheet.start_date.toISOString().split('T')[0] %>" 
        required
    >

    <label>End Date</label>
    <input 
        type="date" 
        name="end_date" 
        value="<%= timesheet.end_date.toISOString().split('T')[0] %>" 
        required
    >

    <label>Project Name</label>
    <input 
        type="text" 
        name="project_name" 
        value="<%= timesheet.project_name %>" 
        required
    >

    <label>Regular Hours</label>
    <input 
        type="number" 
        step="0.01"
        name="regular_hours" 
        value="<%= timesheet.regular_hours %>" 
        required
    >

    <label>Overtime Hours</label>
    <input 
        type="number" 
        step="0.01"
        name="overtime_hours" 
        value="<%= timesheet.overtime_hours %>" 
        required
    >

    <button type="submit">Update Timesheet</button>

</form>