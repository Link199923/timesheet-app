<h1>Add Timesheet</h1>

<form action="/timesheets" method="POST">

    <label>Worker</label><br>
    <select name="worker_id" required>
        <% workers.forEach(worker => { %>
            <option value="<%= worker.id %>">
                <%= worker.first_name %> <%= worker.last_name %>
            </option>
        <% }) %>
    </select>
    <br><br>

    <label>Date</label><br>
    <input type="date" name="work_date" required>
    <br><br>

    <label>Project</label><br>
    <input name="project_name" required>
    <br><br>

    <label>Regular Hours</label><br>
    <input type="number" step="0.01" name="regular_hours">
    <br><br>

    <label>Overtime Hours</label><br>
    <input type="number" step="0.01" name="overtime_hours">
    <br><br>

    <button type="submit">Create</button>
</form>

<br>
<a href="/timesheets">Back</a>