<h1>Add Worker</h1>

<form action="/workers" method="POST">
    <input name="first_name" placeholder="First Name" required><br><br>
    <input name="last_name" placeholder="Last Name" required><br><br>
    <input name="email" placeholder="Email"><br><br>
    <input name="phone" placeholder="Phone"><br><br>
    <input name="trade" placeholder="Trade"><br><br>
    <input name="hourly_rate" placeholder="Hourly Rate" type="number" step="0.01"><br><br>
    <input name="overtime_rate" placeholder="Overtime Rate" type="number" step="0.01"><br><br>

    <button type="submit">Create</button>
</form>

